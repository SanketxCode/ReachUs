<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Service_Provider_Info"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register and Start Earning"
        android:fontFamily="@font/font11"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#0099ff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Be ready with following"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Bank Details to Recieve Payments"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* GST Details of business"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp">

            <EditText
                android:drawableStart="@drawable/ic_name"
                android:drawableTint="#0099ff"
                android:id="@+id/Name"
                android:padding="10dp"
                android:inputType=""
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Name" />

            <EditText
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawableTint="#0099ff"
                android:id="@+id/Phone"
                android:padding="10dp"
                android:inputType=""
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Phone No." />

            <EditText
                android:drawableStart="@drawable/ic_email"
                android:drawableTint="#0099ff"
                android:id="@+id/Email"
                android:padding="10dp"
                android:inputType=""
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Business Email" />

            <CheckBox
                android:id="@+id/termsandconditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree With ReachUs Terms and Services"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/continueStep2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Continue"
            android:fontFamily="@font/font11"
            android:layout_gravity="center"
            android:layout_margin="30dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
